@{
    ViewBag.Title = "Consulta de capacitación";
    Layout = "~/Views/Shared/_Layout TB.cshtml";
}

<h2>@ViewBag.Title</h2>
<p>Ingrese el número de cédula para consultar si tiene aprobada su capacitación.</p>

@using (Html.BeginForm("BuscarCertificado", "Comerciantes", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <br />

    <div class="form-group">
        @Html.Label("Cédula:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.Editor("cedulaString", new { htmlAttributes = new { @class = "form-control", @minlength = "10", @maxlength = "10", @title = "Ingrese los 10 dígitos de la cédula", @onKeypress = "if (event.keyCode < 48 || event.keyCode > 57) event.returnValue = false;", @required = "required" } })            
            <p><b>Ejemplo:</b> 1717418279</p>
        </div>
    </div>



    <div class="col-md-1">
        <input type="submit" class="btn btn-default" value="Buscar" />
    </div>
    <br />
    <br />

}
