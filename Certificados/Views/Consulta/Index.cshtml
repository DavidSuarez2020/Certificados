@{
    ViewBag.Title = "PERFIL Consulta";
    Layout = "~/Views/Shared/_Layout TB.cshtml";
}



<h3>En esta ventana podrá CONSULTAR</h3>

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-primary">
            <div class="panel panel-heading">MÓDULO DE CONSULTA</div>
            <div class="panel panel-body">
                <table id="tbComerciantes" class="table">
                    <thead>
                        <tr>
                            <th>Cédula</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>
        $(document).ready(function () {
            $('#tbComerciantes').DataTable({
                "ajax": {
                    "url": "@Url.Action("Listar","Consulta")",
                    "type": "GET",
                    "dataType": "json"
                },
                "columns": [
                    { "data": "Cedula" },
                    { "data": "Nombres" },
                    { "data": "Apellidos" },
                    { "data": "ID", "render": function (data) {
                            return "<button class='btn btn-primary btn-sm' type='button' onclick='abrirModal(" + data + ")'>ABCD</button>"
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }
                ]
            });
        });

        function abrirModal($ID) {
            alert("Hola, Genera tu certificado! "+$ID)
        }

    </script>
}